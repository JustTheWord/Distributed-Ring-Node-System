Vagrant.configure("2") do |config|
  # Iterate to define 5 nodes
  (1..5).each do |i|
    config.vm.define "node#{i}" do |node|
      # Use your locally added box name (converted from the OVA).
      # Make sure "Deb12_amd64_DSV_5.0i" is a valid box on your system!
      node.vm.box = "Deb12_amd64_DSV_5.0i"
      node.vm.hostname = "node#{i}"

      # Each node gets a private IP in the 192.168.56.* range
      node.vm.network "private_network", ip: "192.168.56.1#{i}0"

      # Example VirtualBox settings
      node.vm.provider "virtualbox" do |vb|
        vb.name = "node#{i}"
        vb.memory = 512
        vb.cpus = 1
      end

      # Provision with Ansible
      node.vm.provision "ansible" do |ansible|
        ansible.playbook       = "../ansible/playbook.yml"
        ansible.inventory_path = "../ansible/inventory"
        ansible.become         = true
        ansible.limit          = "node#{i}"
        # If your environment complains about SSH host key checking:
        ansible.host_key_checking = false
      end
    end
  end
end
